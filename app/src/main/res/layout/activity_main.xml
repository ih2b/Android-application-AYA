<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000"
    android:id="@+id/main_layout">



    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:fontFamily="Cambria"
        android:text="Pour une experience optimale "
        ></TextView>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:fontFamily="Cambria"
        android:text="nous vous conseillons d'utiliser des ecouteurs et votre smartphone en position verticale"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/B1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a0"></Button>
        <Button
            android:id="@+id/B2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/b0"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/B3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/c0"></Button>
        <Button
            android:id="@+id/B4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/d0"></Button>
    </LinearLayout>
    <Button
        android:id="@+id/Bf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RÃ©veille Toi !"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"></Button>

</LinearLayout>